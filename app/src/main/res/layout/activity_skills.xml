        android:textColor="@color/material_dynamic_primary50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDwarvenSmith"
        tools:text="@string/skill_orcishsmith" />

    <TextView
        android:id="@+id/txtEbonySmith"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/skill_ebonysmith"
        android:fontFamily="@font/skyrimbooks_handwritten_bold"
        android:shadowColor="@color/material_dynamic_tertiary50"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/skill_ebonysmith"
