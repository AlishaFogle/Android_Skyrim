        tools:text="@string/skill_advancedsmith" />

    <TextView
        android:id="@+id/txtGlassSmith"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/skill_glasssmith"
        android:fontFamily="@font/skyrimbooks_handwritten_bold"
        android:shadowColor="@color/material_dynamic_tertiary50"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/skill_glasssmith"
        android:textAlignment="textEnd"
        android:textColor="@color/material_dynamic_primary50"
